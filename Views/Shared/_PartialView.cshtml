<style>
    .search-bar {
        position : fixed;
        top : 0;
        width: 1100px;
        padding: 10px;
        background-color: #f0f0f0;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .search-bar form {


            display: flex;
            flex-wrap: wrap; /* Allows fields to wrap if they don't fit in one line */
            justify-content: flex-start;
            align-items: center;
        }

        .search-bar input[type="text"],
        .search-bar input[type="date"],
        .search-bar input[type="number"] {
            padding: 8px;
            margin-right: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: all 0.3s ease-in-out;
            width: 20%; /* Adjust width to make boxes smaller */
        }

            .search-bar input[type="text"]:focus,
            .search-bar input[type="date"]:focus,
            .search-bar input[type="number"]:focus {
                width: 20%; /* Slightly larger when focused */
                padding: 12px;
                border-color: #4CAF50;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            }

        .search-bar button[type="submit"] {
            padding: 10px;
            width: 160px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
        }

            .search-bar button[type="submit"]:hover {
                background-color: #3e8e41;
                transform: scale(1.1);
            }

        .search-bar i {
            font-size: 18px;
            margin-right: 5px;
        }

</style>

<div class="search-bar">
    <form asp-action="Search" asp-controller="Home" method="get">
        @* <input type="text" name="searchQuery" placeholder="Search..."> *@
        <input type="text" name="location" placeholder="Akluj" title="Location">

        <input type="date" name="check In " placeholder="Check In">

        <input type="date" name="check Out" placeholder="Check-Out...">
        <input type="number" name="peopleCount" placeholder="People Count..." min="1">
        <button type="submit" value="search">
            <span class="button-text">Search</span>
            <i class="fas fa-search"></i>
        </button>
    </form>
</div>s